<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                               http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="drop-table-monitoring_relation_type" author="M_Zhivotovskiy">
        <sql splitStatements="true">
            DROP TABLE IF EXISTS "monitoring_relation_type" CASCADE;
        </sql>
    </changeSet>

    <changeSet id="create-table-monitoring_relation_type" author="M_Zhivotovskiy">
        <sql splitStatements="true">
            CREATE TABLE public.monitoring_relation_type (
            id int4 NOT NULL GENERATED BY DEFAULT AS IDENTITY( INCREMENT BY 1 MINVALUE 1 MAXVALUE 2147483647 START 1 CACHE 1 NO CYCLE),
            "name" varchar NULL,
            description varchar NULL,
            CONSTRAINT entity_relation_type_front_pk PRIMARY KEY (id)
            );
        </sql>
    </changeSet>
</databaseChangeLog>
